@* @model IEnumerable<CourseSite.Models.Publication> *@

@{
    ViewData["Title"] = "Show";
}

<div class="text-center">
    <h1 class="display-4"></h1>

    <div class="publication" style="background-color: rgb(199, 199, 199);">
        <h3>@ViewBag.Publication.Title</h3>
        <p>@ViewBag.Publication.Text</p>
        <p>@ViewBag.Publication.DateTime @ViewBag.Publication.Author</p>
    </div>
    <a href="/Home">Назад</a>

    <div>
        <h3>Написати коментар</h3>
        <form method="post">
            <input type="hidden" value="@ViewBag.BookId" name="BookId" />
            <table>
                <tr>
                    <td>
                        <p>Введіть своє ім'я </p>
                    </td>
                    <td><input type="text" name="Author" /> </td>
                </tr>
                <tr>
                    <td>
                        <p>Текст</p>
                    </td>
                    <td>
                        <input type="text" name="Text" />
                    </td>
                </tr>
                <tr>
                    <td><input type="submit" value="Відправити" />
                    </td>
                    <td></td>
                </tr>
            </table>
        </form>
    </div>

